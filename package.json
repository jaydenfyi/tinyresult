{
	"name": "@jaydenfyi/tinyresult",
	"version": "0.0.4",
	"description": "A tiny library for handling synchronous and asynchronous results with error handling.",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/jaydenfyi/tinyresult.git"
	},
	"author": {
		"name": "jaydenfyi",
		"url": "https://github.com/jaydenfyi"
	},
	"type": "module",
	"zshy": {
		"main": "src/index.ts",
		"module": "src/index.ts",
		"exports": {
			".": "./src/index.ts",
			"./core": "./src/core/index.ts"
		}
	},
	"files": [
		"dist"
	],
	"size-limit": [
		{
			"path": "dist/index.js",
			"gzip": true,
			"limit": "1.2 KB"
		},
		{
			"path": "dist/core/index.js",
			"gzip": true,
			"limit": "0.8 KB"
		}
	],
	"scripts": {
		"build": "zshy",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"size": "size-limit",
		"prettier": "prettier --write ."
	},
	"devDependencies": {
		"@jaydenfyi/tinyresult": "file:dist",
		"@size-limit/esbuild-why": "^11.2.0",
		"@size-limit/preset-small-lib": "^11.2.0",
		"@types/node": "^24.2.1",
		"@vitest/coverage-v8": "^3.2.4",
		"prettier": "^3.6.2",
		"size-limit": "^11.2.0",
		"typescript": "^5.8.3",
		"vitest": "^3.2.4",
		"zshy": "^0.3.5"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.cts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		},
		"./core": {
			"types": "./dist/core/index.d.cts",
			"import": "./dist/core/index.js",
			"require": "./dist/core/index.cjs"
		}
	},
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.cts"
}
